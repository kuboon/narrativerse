<main class="page">
  <section class="form-card">
    <h1>New scene</h1>
    <%= form_with model: @scene do |form| %>
      <div class="field">
        <%= form.label :text %>
        <%= form.text_area :text, rows: 8, required: true %>
        <%= button_to "AI draft", ai_assists_scene_text_path, class: "btn ghost", form_class: "inline-action" %>
      </div>
      <div class="actions">
        <%= form.submit "Create", class: "btn primary" %>
        <%= link_to "Cancel", scenes_path, class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
