<main class="page">
  <section class="grid">
    <div class="grid-header">
      <h1>Scenes</h1>
      <%= link_to "New scene", new_scene_path, class: "btn primary" %>
    </div>
    <%= form_with url: scenes_path, method: :get, class: "filter-bar" do |form| %>
      <div class="field">
        <%= form.label :q, "Search" %>
        <%= form.text_field :q, value: @query, placeholder: "Scene text" %>
      </div>
      <div class="actions">
        <%= form.submit "Filter", class: "btn ghost" %>
      </div>
    <% end %>
    <div class="cards">
      <% @scenes.each do |scene| %>
        <article class="card">
          <h3>Scene <%= scene.id %></h3>
          <p><%= truncate(scene.text, length: 120) %></p>
          <%= link_to "Open", scene_path(scene), class: "text-link" %>
        </article>
      <% end %>
    </div>
  </section>
</main>
