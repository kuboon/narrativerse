<main class="page">
  <section class="form-card">
    <h1>ログイン</h1>
    <%= form_with url: session_path do |form| %>
      <div class="field">
        <%= form.label :user_id, "ユーザー選択" %>
        <%= form.select :user_id, @users.map { |user| [user.name, user.id] }, prompt: "選択" %>
      </div>
      <div class="actions">
        <%= form.submit "ログイン", class: "btn primary" %>
        <%= link_to "ユーザー作成", new_user_path, class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
