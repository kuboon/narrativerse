<main class="page">
  <section class="form-card">
    <h1>プロット要素の編集</h1>
    <p class="badge"><%= @plot_element.element.name %> · <%= t("elements.types.#{@plot_element.element.element_type.downcase}") %></p>
    <%= form_with model: [@plot, @plot_element] do |form| %>
      <div class="field">
        <%= form.label :summary, "プロット内の役割" %>
        <%= form.text_area :summary, rows: 3 %>
      </div>
      <div class="field">
        <%= form.label :secrets, "秘密の設定" %>
        <%= form.text_area :secrets, rows: 3 %>
      </div>
      <div class="actions">
        <%= form.submit "更新", class: "btn primary" %>
        <%= link_to "戻る", plot_path(@plot), class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
