<main class="page">
  <section class="form-card">
    <h1>ユーザー作成</h1>
    <%= form_with model: @user do |form| %>
      <div class="field">
        <%= form.label :name, "名前" %>
        <%= form.text_field :name, required: true %>
      </div>
      <div class="field">
        <%= form.label :icon, "アイコン" %>
        <%= form.text_field :icon %>
      </div>
      <div class="field">
        <%= form.label :bio, "自己紹介" %>
        <%= form.text_area :bio, rows: 4 %>
      </div>
      <div class="actions">
        <%= form.submit "作成", class: "btn primary" %>
        <%= link_to "キャンセル", root_path, class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
