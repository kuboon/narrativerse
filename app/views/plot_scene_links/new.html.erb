<main class="page">
  <section class="form-card">
    <h1>ストーリーに追加</h1>
    <p class="lede">ストーリーは内部で生成されます。次の物語をここに書いてください。</p>
    <%= form_with model: @scene, url: plot_plot_scene_links_path(@plot) do |form| %>
      <div class="field">
        <%= form.label :text, "次のストーリー" %>
        <%= form.text_area :text, rows: 8, required: true %>
        <%= link_to "AI下書き", ai_assists_scene_text_path, method: :post, class: "btn ghost inline-action" %>
      </div>
      <div class="actions">
        <%= form.submit "追加", class: "btn primary" %>
        <%= link_to "キャンセル", plot_path(@plot), class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
