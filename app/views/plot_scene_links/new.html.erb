<main class="page">
  <section class="form-card">
    <h1>New scene for <%= @plot.title %></h1>
    <%= form_with model: @scene, url: plot_plot_scene_links_path(@plot) do |form| %>
      <div class="field">
        <%= form.label :text %>
        <%= form.text_area :text, rows: 8, required: true %>
      </div>
      <div class="actions">
        <%= form.submit "Create", class: "btn primary" %>
        <%= link_to "Cancel", plot_path(@plot), class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
