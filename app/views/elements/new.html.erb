<main class="page">
  <section class="form-card">
    <h1>要素作成</h1>
    <%= form_with model: @element do |form| %>
      <div class="field">
        <%= form.label :element_type, "種別" %>
        <%= form.select :element_type, Element::ELEMENT_TYPES.map { |type| [t("elements.types.#{type.downcase}"), type] }, prompt: "選択" %>
      </div>
      <div class="field">
        <%= form.label :name, "名前" %>
        <%= form.text_field :name, required: true %>
      </div>
      <div class="field">
        <%= label_tag "element_revision_summary", "概要" %>
        <%= text_area_tag "element_revision[summary]", nil, rows: 3 %>
      </div>
      <div class="field">
        <%= label_tag "element_revision_text", "本文" %>
        <%= text_area_tag "element_revision[text]", nil, rows: 6 %>
      </div>
      <div class="actions">
        <%= form.submit "作成", class: "btn primary" %>
        <%= link_to "キャンセル", elements_path, class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
