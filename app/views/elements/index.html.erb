<main class="page">
  <section class="grid">
    <div class="grid-header">
      <h1>Elements</h1>
      <%= link_to "New element", new_element_path, class: "btn primary" %>
    </div>
    <%= form_with url: elements_path, method: :get, class: "filter-bar" do |form| %>
      <div class="field">
        <%= form.label :q, "Search" %>
        <%= form.text_field :q, value: @query, placeholder: "Name or type" %>
      </div>
      <div class="actions">
        <%= form.submit "Filter", class: "btn ghost" %>
      </div>
    <% end %>
    <div class="cards">
      <% @elements.each do |element| %>
        <article class="card">
          <h3><%= element.name %></h3>
          <p><%= element.element_type %></p>
          <%= link_to "Open", element_path(element), class: "text-link" %>
        </article>
      <% end %>
    </div>
  </section>
</main>
