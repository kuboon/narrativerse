<main class="page">
  <section class="grid">
    <div class="grid-header">
      <h1>要素</h1>
      <%= link_to "要素作成", new_element_path, class: "btn primary" %>
    </div>
    <%= form_with url: elements_path, method: :get, class: "filter-bar" do |form| %>
      <div class="field">
        <%= form.label :q, "検索" %>
        <%= form.text_field :q, value: @query, placeholder: "名前 / 種別" %>
      </div>
      <div class="actions">
        <%= form.submit "絞り込む", class: "btn ghost" %>
      </div>
    <% end %>
    <div class="cards">
      <% @elements.each do |element| %>
        <article class="card">
          <h3><%= element.name %></h3>
          <p><%= t("elements.types.#{element.element_type.downcase}") %></p>
          <%= link_to "詳細", element_path(element), class: "text-link" %>
        </article>
      <% end %>
    </div>
  </section>
</main>
