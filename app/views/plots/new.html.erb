<main class="page">
  <section class="form-card">
    <h1>プロット作成</h1>
    <%= form_with model: @plot do |form| %>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, required: true %>
      </div>
      <div class="field">
        <%= form.label :summary, "概要" %>
        <%= form.text_area :summary, rows: 4 %>
        <%= link_to "AI要約", ai_assists_plot_summary_path, method: :post, class: "btn ghost inline-action" %>
      </div>
      <div class="field">
        <%= form.label :scene_text, "最初の場面の本文" %>
        <%= form.text_area :scene_text, rows: 6, required: true %>
        <p class="helper-text">※ 入力した本文がこのプロットの最初の場面として保存されます。</p>
      </div>
      <div class="actions">
        <%= form.submit "作成", class: "btn primary" %>
        <%= link_to "キャンセル", plots_path, class: "btn ghost" %>
      </div>
    <% end %>
  </section>
</main>
