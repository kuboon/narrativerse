<main class="page">
  <section class="grid">
    <div class="grid-header">
      <h1>Plots</h1>
      <%= link_to "New plot", new_plot_path, class: "btn primary" %>
    </div>
    <%= form_with url: plots_path, method: :get, class: "filter-bar" do |form| %>
      <div class="field">
        <%= form.label :q, "Search" %>
        <%= form.text_field :q, value: @query, placeholder: "Title or summary" %>
      </div>
      <div class="actions">
        <%= form.submit "Filter", class: "btn ghost" %>
      </div>
    <% end %>
    <div class="cards">
      <% @plots.each do |plot| %>
        <article class="card">
          <h3><%= plot.title %></h3>
          <p><%= plot.summary.presence || "No summary yet." %></p>
          <div class="card-actions">
            <%= link_to "Open", plot_path(plot), class: "text-link" %>
            <% if plot.plot_scene_links.any? %>
              <%= link_to "Read", reader_path(plot), class: "text-link" %>
            <% end %>
          </div>
        </article>
      <% end %>
    </div>
  </section>
</main>
